.tsg
    h1.tsg_title Text Shadow Generator
    .section.tsg_section
        .card 
            .card-header Settings
            .card-body
                .card-section
                    .card-header 
                        h4 Font Size
                    .card-section-body
                        input#range-font-size(type="range", name="", min="8", max="72", step="1", value="40").range
                        div
                            span.font-size-count.value 40
                            span px
                .card-section
                    .card-header 
                        h4 Offset X
                    .card-section-body
                        input#range-offset-X(type="range", name="", min="-20", max="20", step="1", value="2").range
                        div
                            span.offset-X.value 2
                            span px
                .card-section
                    .card-header 
                        h4 Offset Y
                    .card-section-body
                        input#range-offset-Y(type="range", name="", min="-20", max="20", step="1", value="2").range
                        div
                            span.offset-Y.value 2
                            span px
                .card-section
                    .card-header 
                        h4 Blur
                    .card-section-body
                        input#range-blur(type="range", name="", min="0", max="20", step="1", value="4").range
                        div
                            span.blur.value 4
                            span px
        .color.card 
            .card-header Color
            .card-body
                .card-section.card-section-colorpick
                    .card-header-header 
                        h4 Color
                    .card-section-body
                        input#colorpick(type="color", value="#005CC8")
                        div
                            span.color-value.value #005CC8
                .card-section
                    .card-header-header 
                        h4 Opacity
                    .card-section-body
                        input#range-opacity(type="range", name="", min="0", max="1", step="0.01", value="1").range
                        div
                            span.opacity-value.value 1
        .result.card 
            .card-header Result
            .card-body
                .card-section
                    .card-header-header 
                        h4 CSS code with HEX
                    .card-section-body.result
                        textarea#resulthex(name="resulthex",rows="6", readonly) 
                .card-section
                    .card-header-header 
                        h4 CSS code with RGB
                    .card-section-body.result
                        textarea#resultrgb(name="resultrdb",rows="6", readonly)

script(type="module", src="src/components/text-shadow-generator/text-shadow-generator.js")