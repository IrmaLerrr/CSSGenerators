mixin card-section(title, span1, span2)
    .card-section&attributes(attributes)= name
        .card-section-header 
            h4=title
        .card-section-body
            block
            if span1
                div
                    span=span1
                    if span2
                        span=span2
.tsg
    h1.tsg_title Text Shadow Generator
    .section.tsg_section
        .card.tsg_shadow-card 
            .card-header Shadow 1
            .card-body
                +card-section('Offset X', '2', 'px')
                    input#tsg_range-offset-X1(type="range", name="", min="-20", max="20", step="1", value="2").range.range-offset-X
                +card-section('Offset Y', '2', 'px')
                    input#tsg_range-offset-Y1(type="range", name="", min="-20", max="20", step="1", value="2").range.range-offset-Y
                +card-section('Blur', '4', 'px')
                    input#tsg_range-blur1(type="range", name="", min="0", max="20", step="1", value="4").range.range-blur
                +card-section('Color', '#005CC8', '')(class="colorpick-card-secton")
                    input#tsg_colorpick1(type="color", value="#005CC8").colorpick
                +card-section('Opacity', '1', '')
                    input#tsg_range-opacity1(type="range", name="", min="0", max="1", step="0.01", value="1").range.range-opacity
                +card-section('', '', '')(class="btn-section")
                    button.btn.tsg_add-btn#tsg_add-shadow1 Add Shadow
                    button.btn.tsg_delete-btn#tsg_delete-shadow1 Delete Shadow
        .card.tsg_result-card 
            .card-header Result
            .card-body
                +card-section('Font Size', '40', 'px')
                    input#tsg_range-font-size(type="range", name="", min="8", max="72", step="1", value="40").range
                +card-section('Color of TEXT', '#000000', '')(class="colorpick-card-secton")
                    input#tsg_colorpick-text(type="color", value="#000000").colorpick
                +card-section('CSS code with HEX', '', '')
                    textarea#tsg_resulthex(name="resulthex",rows="6", readonly) 
                +card-section('CSS code with RGB', '', '')
                    textarea#tsg_resultrgb(name="resultrdb",rows="6", readonly) 
script(type="module", src="src/components/text-shadow-generator/text-shadow-generator.js")